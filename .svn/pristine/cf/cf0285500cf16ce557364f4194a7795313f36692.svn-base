body {
    .header {
        background-color: #fff;
        width: 100%;
        height: 50px;
        padding: 0;
        height: 80px;
        .title {
            display: block;
            float: left;
            font-size: 20px;
            font-weight: bolder;
            letter-spacing: 2px;
            margin-left: 6%;
            span {
                position: relative;
                bottom: 25px;
            }
        }
        .nav {
            padding-top: 1%;
            display: block;
            margin-left: 20%;
            width: auto;
            height: inherit;
            ul {
                list-style-type: none;
                li {
                    float: left;
                    a {
                        color: black;
                        width: 80px;
                        height: 30px;
                        font-size: 18px;
                        line-height: 30px;
                        display: block;
                        text-align: center;
                        text-decoration: none;
                        margin-left: 8px;
                        border-bottom: 2px #EEB422 solid;
                        &:link {
                            color: black;
                        }
                        &:hover {
                            background-color: #EEB422;
                            transition-duration: 0.3s;
                            color: white;
                            font-weight: bold;
                            border-radius: 4px;
                        }
                    }
                }
            }
            .to-login {
                width: 200px;
                float: left;
                height: 50px;
                margin-left: 10%;
                .btn {
                    border: none;
                    width: 100px;
                    background-color: #66CD00;
                    color: whitesmoke;
                    font-size: 18px;
                    border-radius: 5px;
                    height: 30px;
                    &:hover {
                        background-color: #90EE90;
                    }
                }
                .register {
                    position: relative;
                    bottom: 30px;
                    left: 130px;
                }
            }
        }
    }
    .swiper-header {
        width: 100%;
        height: 600px;
        img {
            width: 100%;
            height: 100%;
        }
        .img-info {
            position: relative;
            top: 40px;
            left: 10px;
            color: white;
            font-size: 18px;
            font-weight: bolder;
        }
        .swiper-btn {
            color: white;
        }
    }
    .scenic-remomend{
        float: left;
        width: 300px;
        height: auto;
        border: 1px solid #C5C5C5;
        box-shadow: 0 0 5px #D8D8D8;
        border-radius: 4px;
        margin-top: 10%;
        margin-left: 2%;
        padding: 8px;
        #r-title{
            font-size: 20px;
            font-weight: bold;
        }
        .swiper-remomend{
            width: 100%;
            height:100%;
            overflow: hidden;
            text-align: center;
            img{
                width: 100%;
                height: 100%;
            }
            .r-info{
               position: relative;
               z-index: 100;
               color: white;
               bottom: 30px;
               font-weight: bold; 
               font-size: 18px;
            }
        }
        
    }
    .scenic-content {
        margin: 0 auto;
        margin-top:2%;
        width: 60%;
        .sousuo {
            background-color: #C5C5C5;
            padding: 8px;
            border-radius: 6px 6px 0 0 ;
            text-align: center;
            .in-find {
                padding-left: 30px;
                width: 70%;
                height: 40px;
                border-radius: 7px;
                outline: 0;
                border: 1px solid #d8d8d8;
                box-shadow: 0 0 5px #fff;
                &:focus {
                    transition-duration: 0.5s;
                    border: 1px solid #ffa200;
                    box-shadow: 0 0 5px #ffa200;
                    outline: 0;
                }
            }
            .find {
                border: none;
                outline: 0;
                background-color: #EEB422;
                color: white;
                font-size: 18px;
                font-weight: bold;
                height: 40px;
                width: 80px;
                border-radius: 7px;
                &:hover {
                    background-color: #ffb01e;
                    cursor: pointer;
                    font-weight: bold;
                    transition-duration: 0.3s;
                }
            }
            .icon-search {
                position: relative;
                // bottom: 20px;
                left: 36px;
                top: 6px;
            }
        }
        .scenic-list {
            display: flex;
            justify-content: center;
            flex-wrap: wrap;
            border: 1px solid #e5e5e5;
            .scenic-item {
                width: 300px;
                margin: 15px 10px;
                padding: 10px;
                font-size: 20px;
                line-height: 22px;
                text-align: center;
                //              font-weight:bold; 
                &:hover {
                    background-color: #F4F4F4;
                    cursor: pointer;
                    transition-duration: 0.5s;
                }
            }
        }
    }
}