body {
    .content {
        padding: 10px 20px;
        width: 100%;
        height: auto;
        .thead {
            width: 100%;
            height: 45px;
            border-bottom: 1px solid #d4d4d4;
            span {
                float: left;
                font-weight: bold;
                font-size: 20px;
            }
            button {
                height: 40px;
                margin-right: 5%;
                color: white;
                font-weight: bold;
                float: right;
                background-color: #00BC9B;
                text-align: center;
                padding: 10px 0;
                border-radius: 3px;
                font-size: 14px;
                outline: 0;
                cursor: pointer;
                border: none;
                min-width: 150px;
                &:hover {
                    background-color: #00B091;
                }
                
            }
           
        }
        .tbody {
            margin-right: 5%;
            margin-top: 2%;
            .changeAvatar {
                float: right;
                width: 150px;
                height: 180px; // border: 1px solid black;
                text-align: center;
                padding-top: 5px;
                margin-right: 30%;
                .user-avatar {
                    margin: 0 auto;
                    width: 100px;
                    height: 100px;
                    border-radius: 100px;
                    overflow: hidden;
                    img {
                        width: 100%;
                        height: 100%;
                    }
                }
                button {
                    margin-top: 10px;
                    color: white;
                    background-color: #00BC9B;
                    text-align: center;
                    padding: 10px 0;
                    border-radius: 3px;
                    font-size: 14px;
                    outline: 0;
                    cursor: pointer;
                    border: none;
                    width: 110px;
                    &:hover {
                        background-color: #00B091;
                    }
                }
                #dialog .choose{
                    width: 100%;
                    #select-avatar{
                        width: 150px;
                    }
                }
            }
            .user-info {
                width: 30%;
                height: auto;
                text-align: center;
                margin-left: 20%;
                table {
                    font-size: 18px;
                    margin: 0 auto;
                    th {
                        text-align: right;
                    }
                    .text input {
                        border: 1px solid #d8d8d8;
                        color: #666;
                        box-shadow: 0 0 5px #fff;
                        border-radius: 5px;
                        height: 30px;
                        width: 100%;
                        padding-left: 5px;
                        &:focus {
                            transition-duration: 0.5s;
                            border: 1px solid #ffa200;
                            box-shadow: 0 0 5px #ffa200;
                            outline: 0;
                        }
                    }
                    .radio input {
                        width: 20px;
                        height: 20px;
                    }
                }
                .save {
                    margin-top: 20px;
                    color: white;
                    font-weight: bold;
                    background-color: #00BC9B;
                    text-align: center;
                    padding: 10px 0;
                    border-radius: 3px;
                    font-size: 14px;
                    outline: 0;
                    cursor: pointer;
                    border: none;
                    width: 110px; // display: inline-block;
                    &:hover {
                        background-color: #00B091;
                    }
                }
            }
        }
    }
}