body{
    background-image: url("../imags/login-bg.jpg");
    background-size: cover;
    background-repeat: no-repeat;
    .login{
        float: right;
        min-width: 23%;
        width: auto;
        height: auto;
        background-color:rgba(240,230,140,0.7);
        border-radius: 8px;
        text-align: center;
        margin-right: 10%;
        margin-top: 10%;
        padding:2%;
        .error{
            display: block;
            font-size: 13px;
            color: red;
            position: relative;
            top: 10px;
        }
        .welcome-login{
            font-size: 30px;
            font-weight: bolder;
            color:dimgray;
        }
        .id-input,.pass-input{
            border-radius: 5px;
            height: 30px;
            width: 70%;
            margin-top: 8%;
            padding-left: 5px;
        }
        .btn-login{
            width: 70%;
            height: 40px;
            margin-top: 10%;
            background-color: #00008B;
            font-size: 18px;
            color: whitesmoke;
            border-radius: 8px;
            &:hover{
                background-color:#FFFFF0;
                color: black;
                font-weight: bold;
                transition-duration: 0.3s;
            }
        }
        .to-regist{
            display: block;
            margin-top: 5%;
            font-size: 16px;
            color:#757575;
            a{
                text-decoration: none;
                color: red;
            }
        }
    }
    .title{
        color: black;
        font-size: 28px;
        font-weight: bolder;
        position: relative;
        top: 80px;
        left: 120px;
        letter-spacing: 2px;
    }
    .slogan{
        padding-left: 5px;
        border-left: 5px whitesmoke solid;
        border-radius: 3px;
        color: black;
        font-size: 25px;
        font-weight: bolder;
        position: relative;
        top:280px;
        left: 100px;
    }
    
}