<!DOCTYPE html>
<html lang="en">

	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<meta http-equiv="X-UA-Compatible" content="ie=edge">
		<title>User Detail</title>
		<link rel="stylesheet" href="../css/css/userDetail.css">
		<link rel="stylesheet" href="../js/jquery-ui-1.12.1.custom/jquery-ui.min.css">
		<style type="text/css">
			table {
				padding: 10px;
			}
			
			.pass tr {
				margin-top: 10px;
			}
			
			.pass th label {
				text-align: right;
			}
			
			.pass td {
				height: 60px;
				text-align: center;
			}
			
			.pass td input {
				outline: 0;
				border-radius: 5px;
				line-height: 28px;
				border: 1px solid #d8d8d8;
				color: #666;
				box-shadow: 0 0 5px #fff;
				height: 25px;
				width: 100%;
				padding-left: 5px;
			}
			.pass td input:focus{
				transition-duration: 0.5s;
                border: 1px solid #ffa200;
                box-shadow: 0 0 5px #ffa200;
                outline: 0;
			}
			.btn-pass{
				float: left;
				width: 100%;
				text-align: center;
			}
			.chang-pass{
				margin-top: 10px;
				outline: 0;
                color: #fff;
                background-color: #ffa800;
                border-radius: 3px;
                height: 40px;
                border: none;
                width: 120px;
			}
			.chang-pass:hover{
				background-color: #ff7200;
			}
		</style>
	</head>

	<body>
		<div class="content">
			<div class="thead">
				<span>User Message</span>
				<button id="editInfo" type="button" class="edit">Edit</button>
				<button id="cancelInfo" type="button" class="cancel">Cancel</button>&nbsp;&nbsp;
				<button type="button" id="change-pass">Change Password</button>
				<div id="c-pass" title="Change your password">
					<form>
						<div id="" class="pass-in">
							<table class="pass" border="0" cellspacing="" cellpadding="">
								<tr>
									<th>
										<label for="pass1">New Password</label>
									</th>
									<td>
										<input type="password" name="" id="pass1" /><br/>
									</td>
								</tr>
								<tr>
									<th>
										<label for="pass2">Enter Again</label>
									</th>
									<td>
										<input type="password" name="" id="pass2" />
									</td>
								</tr>
							</table>
						</div>
						<div class="btn-pass">
							<button type="submit" class="chang-pass">Change</button>						
						</div>
						
					</form>
				</div>
			</div>
			<div class="tbody">
				<div class="changeAvatar">
					<form action="">
						<div class="user-avatar">
							<img src="../imags/c4Fvlp63yAQ.jpg" alt="">
						</div>
						<button type="button" id="opener">Change</button>
						<div id="dialog" title="Choose Avatar">
							<form action="">
								<div class="choose">
									<img style="width: 130px;height: 130px;display: block;margin: 0 auto;" title="choose the image" src="../imags/dPSc8w2zn-A.jpg" id="preview-avatar" alt="">
									<input type="file" id="select-avatar" style="margin-top: 20px;display: block;" />
								</div>
							</form>
						</div>
					</form>
				</div>
				<div class="user-info">
					<form action="">
						<table>
							<tr>
								<th>Name:</th>
								<td class="finish">Edward</td>
								<td class="unfinish text" style="display: none">
									<input type="text" value="Edward" />
								</td>
							</tr>
							<tr>
								<th>Gender:</th>
								<td class="finish">Male</td>
								<td class="unfinish radio" style="display: none">
									<input type="radio" value="man" name="gender" id="male" />
									<label for="male">Male</label>
									<input type="radio" value="female" name="gender" id="female" />
									<label for="Female">Female</label>
								</td>
							</tr>
							<tr>
								<th>Age:</th>
								<td class="finish">18</td>
								<td class="unfinish text" style="display: none">
									<input type="text" value="18" />
								</td>
							</tr>
							<tr>
								<th>Tel:</th>
								<td class="finish">17863955547</td>
								<td class="unfinish text" style="display: none">
									<input type="text" value="17863955547" />
								</td>
							</tr>
							<tr>
								<th>Address:</th>
								<td class="finish">Guangdong</td>
								<td class="unfinish text" style="display: none">
									<input type="text" value="Guangdong" />
								</td>
							</tr>
							<tr>
								<th>Rank:</th>
								<td>18</td>
							</tr>
							<tr>
								<th>Register Time:</th>
								<td>2018 03 04</td>
							</tr>
						</table>
						<button id="saveInfo" class="save" type="button">Save</button>
					</form>
				</div>
			</div>
		</div>
	</body>
	<script src="../js/jquery-2.1.0.js"></script>
	<script src="../js/jquery-ui-1.12.1.custom/jquery-ui.min.js"></script>
	<script>
		$(document).ready(function() {
			$('#cancelInfo').hide();
			$('#saveInfo').hide();
			$('#editInfo').click(function() {
				$('td.finish').hide();
				$('td.unfinish').show();
				$(this).hide();
				$('#cancelInfo').show();
				$('#saveInfo').show();
			});
			$('#cancelInfo').click(function() {
				$(this).hide();
				$('#editInfo').show();
				$('td.finish').show();
				$('td.unfinish').hide();
				$('#saveInfo').hide();
			})
		});
		$(function() {
			$('#opener').click(function() {
				$('#dialog').dialog("open");
			});
			$('#dialog').dialog({
				height: 330,
				width: 400,
				autoOpen: false,
				modal: true,
				buttons: {
					Finish: function() {},
					Cancel: function() {
						$(this).dialog("close");
					}

				}
			});
			$('#change-pass').click(function() {
				$('#c-pass').dialog("open");
			});
			$('#c-pass').dialog({
				height: 300,
				width: 400,
				autoOpen: false,
				modal: true,
				
			});
			bindAvatar();
		});

		function bindAvatar() {
			$('#select-avatar').change(function() {
				var obj = $('#select-avatar')[0].files[0];
				var fr = new FileReader();
				fr.onload = function() {
					$('#preview-avatar').attr('src', this.result);
				};
				fr.readAsDataURL(obj);
			})
		}
	</script>

</html>