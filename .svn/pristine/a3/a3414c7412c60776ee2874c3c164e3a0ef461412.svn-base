<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core" %>
<%@page contentType="text/html" pageEncoding="UTF-8"%>
<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">
        <base href="${pageContext.request.contextPath}/"/>
        <link rel="stylesheet" href="resource/css/css/travelPage.css">
        <link rel="stylesheet" type="text/css" href="resource/js/jquery-ui-1.12.1.custom/jquery-ui.min.css"/>

        <title>Travel Page</title>
        <style>
            #t-table{
                margin: 0 auto;
                text-align: center;
            }
            #t-table tr{
                height: 40px;
                display:block;
                margin-top: 10px;
                border-bottom:  1px dashed #cccccc;
            }
        </style>
    </head>
    <body>
        <!--导航模块-->
        <%@include file="header.jsp" %>
        <div class="travel-search">
            <span>
                Go Travelling!
            </span>
            <img class="icon-search" src="resource/imags/icon/search.png" width="20px" height="20px"/>
            <input id="findTravel" type="text" class="in-find" placeholder="Enter the Place" />
            <button type="button" class="find">Search</button>
        </div>

        <div class="travel-list">
            <div class="toolbar">
                <div class="travel-sort">
                    <span>
                        Sort
                    </span>
                    <button type="button" class="sort-btn cost">Cost</button>
                    <button type="button" class="sort-btn day">Days</button>
                </div>
            </div>
            <div class="travel-note">
                <c:forEach items="${travelList}" var="t">
                    <div class="travel-item" id="${t.tourId}">	   
                        <div class="t-head">
                            <span id="t-name">
                                ${t.tourTitle}
                            </span>
                        </div>
                        <div class="t-body">
                            <span class="days">
                                <img src="resource/imags/icon/calendar.png" class="icon time" />&nbsp;</span>
                            <span class="user">
                                <img src="resource/imags/icon/account.png" class="icon account" alt=""> ${t.scenicName}</span><br/>
                            <span class="money">
                                <img src="resource/imags/icon/rmb.png" class="icon cash" />${t.tourPrice}
                            </span>
                        </div>
                    </div>

                </c:forEach>
                <c:forEach items="${travelList}" var="t">
                <div class="travel-detail" title="Apply">
                    <table id="t-table">
                        <tr>
                            <th>Title:</th>
                            <td>${t.tourTitle}</td>
                        </tr>
                        <tr>
                            <th>Place:</th>
                            <td>${t.scenicName}</td>
                        </tr>
                        <tr>
                            <th>Time:</th>
                            <td>${t.tourBeginTime} --- ${t.tourEndTime}</td>
                        </tr>
                        <tr>
                            <th>Cost:</th>
                            <td>${t.tourPrice}</td>
                        </tr>
                        <tr>
                            <th>Person Limit:</th>
                            <td>${t.limitNum}</td>
                        </tr>
                        <tr>
                            <th>Trip Mode</th>
                            <td>${t.tripMode}</td>
                        </tr>
                        <tr>
                            <th>Hotel</th>
                            <td>${t.hotelName}</td>
                        </tr>
                    </table>
                </div>
                </c:forEach>
            </div>
        </div>

    </body>
    <script src="resource/js/jquery-2.1.0.js"></script>
    <script type="text/javascript" src="resource/js/jquery-ui-1.12.1.custom/jquery-ui.min.js" ></script>
    <script>
        $('.travel-item').click(function () {
            var index = $(this).index();
            $('.travel-detail').eq(index).dialog('open');
        });
        $('.travel-detail').dialog({
            modal: true,
            autoOpen: false,
            width: 500,
            height: 500,
            buttons: {
                "Apply": function () {
                    $.ajax({
                       url:'',
                       type:'POST',
                       data:{},
                       success:function(){
                           alert("Apply Succcess!");
                           $('.travel-item').hide();
                           $('.travel-detail').dialog('close');
//                           window.location.reload();
                       },
                       error:function(){
                           $('.travel-item').hide();
                           alert("Apply Error!");
                       }
                    });
                },
                "Cancel": function () {
                    $(this).dialog('close');
                }
            }
        });

    </script>
</html>
