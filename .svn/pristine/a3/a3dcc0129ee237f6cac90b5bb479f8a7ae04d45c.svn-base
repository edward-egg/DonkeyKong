body{
    .header{
        background-color: #fff;
        width: 100%;
        height: 50px;
        padding:0;
        height:80px;
        .title{
            display: block;
            float: left;
            font-size: 20px;
            font-weight: bolder;
            letter-spacing: 2px;
            margin-left:6%;
            span{
                position: relative;
                bottom: 25px;
            }
        }
        .nav{
            padding-top: 1%;
            display: block;
            margin-left: 20%;
            width: auto;
            height: inherit;
            ul{
                list-style-type: none;
                li{
                    float: left;
                    a{
                        color: black;
                        width: 80px;
                        height: 30px;
                        font-size: 18px;
                        line-height: 30px;
                        display: block;
                        text-align: center;
                        text-decoration: none;
                        margin-left: 8px;
                        border-bottom: 2px #EEB422 solid;
                        &:link{
                            color: black;
                        }
                        &:hover{
                            background-color: #EEB422;
                            transition-duration: 0.3s;
                            color: white;
                            font-weight: bold;
                            border-radius: 4px;
                        }
                        
                    }
                    
                }
            }
            .to-login{
                width: 200px;
                float: left;
                height: 50px;
                margin-left: 10%;
                .btn{ 
                    border: none;        
                    width: 100px;
                    background-color: #66CD00;
                    color: whitesmoke;
                    font-size: 18px;
                    border-radius: 5px;
                    height: 30px;
                    &:hover{
                        background-color:#90EE90; 
                    }
                }
                .register{
                    position: relative;
                    bottom: 30px;
                    left: 130px;
                }
            }
        }
        
    }
    .detail-content{
        margin: 0 auto;
        margin-top: 3%;
        width: 70%;
        padding: 5px;
        .h-head{
            width: 100%;
            height: auto;
            
            .h-info{
                span{
                    font-size: 24px;
                    color: #333333;
                }
                .h-address{
                    span{
                        font-size: 18px;
                        color: #333333;
                    }
                }
            }
            .h-img{
                margin-top: 10px;
                text-align: center;
                img{
                    width: 100%;
                    height: 400px;
                }
            }
            .daohang{
                padding-top: 1%;
                display: block;
                width: auto;
                height: inherit;
                height: 80px;
                border-bottom: 1px solid #dedede;
                box-shadow: 0 2px 4px rgba(0,0,0,.1);
                ul{
                    display: block;
                    list-style-type: none;
                    li{
                        padding: 2px;
                        float: left;
                        a{
                            color: black;
                            width: auto;
                            height: 30px;
                            font-size: 18px;
                            line-height: 30px;
                            display: block;
                            text-align: center;
                            text-decoration: none;
                            margin-left: 8px;
                            border-bottom: 2px #EEB422 solid;
                            &:link{
                                color: black;
                            }
                            &:hover{
                                background-color: #EEB422;
                                transition-duration: 0.3s;
                                color: white;
                                border-radius: 4px;
                            }
                        }
                    }
                }
                .write{
                    margin-right: 40px;
                    width: auto;
                    float: right;                    
                    img{
                        width: 40px;
                        height: 40px;
                    }
                    .w-btn{
                        position: relative;
                        bottom: 10px;
                        border: none;
                        outline: 0;
                        background-color: #EEB422;
                        color: white;
                        font-size: 18px;
                        font-weight: bold;
                        height: 40px;
                        width: auto;
                        border-radius: 7px;
                        &:hover {
                            background-color: #ffb01e;
                            cursor: pointer;
                            font-weight: bold;
                            transition-duration: 0.3s;
                        }
                    }
                }
            }
        }
        .h-body{
            margin: 0 auto;
            margin-top: 20px;
            width: 70%;
            text-align: center;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-shadow: 0 0 1px black;
            table{
                margin: 0 auto;
                width: 100%;
                font-size: 20px;
                thead{
                    height: 46px;
                    padding: 0 15px;                   
                    background-color: #f4f4f4;
                    font-size: 16px;
                    color: #333;
                    line-height: 46px;
                    td{
                        margin-left: 10px;
                    }
                }
                tbody{
                    td{
                        border-bottom: 1px dashed #ccc;
                        padding: 10px;
                        .btn-book{                           
                            border: none;
                            outline: 0;
                            background-color: #EEB422;
                            color: white;
                            font-size: 18px;
                            font-weight: bold;
                            height: 40px;
                            width: 40%;
                            border-radius: 7px;
                            &:hover {
                                background-color: #ffb01e;
                                cursor: pointer;
                                font-weight: bold;
                                transition-duration: 0.3s;
                            }
                        }
                    }
                }
            }
        }
        .h-recommend{
            float: left;
            transform: translateX(20%);
            margin-top: 20px;
            border: 2px dotted blue;
            width: 70%;
            padding: 8px 8px;
            #comment-title{
                display: block;
                font-size: 20px;
                font-weight: bold;
                margin-left: 3%;
            }
            .comment-list{
                float: left;
                width: 100%;
                padding: 5px;
                .comment-item{
                    float: left;
                    width: 98%;
                    height: auto;
                    border-bottom: 1px solid #C5C5C5;
                    margin-top: 20px;
                    .avatar{      
                        float: left;                  
                        width: 50px;
                        height: 50px;
                        border-radius: 50px;
                        overflow: hidden;
                        margin-top: 10px;
                        border: 1px solid #AAAAAA;
                        margin-bottom: 8px;
                        img{
                            width: 100%;
                        }
                    }
                    .comment-detail{
                        float:left;
                        margin-left: 8px;
                        width: 90%;
                        .info{
                            border-bottom: 1px solid #AAAAAA;
                            #report{
                                float: right;
                                position: relative;
                                bottom: 10px;
                                img{
                                    width: 25px;
                                    height: 25px;
                                }
                            }
                        }
                        .msg{
                                                     
                            p{
                                word-break: break-all;
                                text-indent: 2em;
                            }
                            span{
                                float: right;
                                margin-right: 5%;
                                margin-top: 5px;
                            }
                        }
                    }
                }
            }
        }
    }
}