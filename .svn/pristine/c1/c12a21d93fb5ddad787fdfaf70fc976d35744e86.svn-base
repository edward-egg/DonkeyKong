.pass-content {
    width: 100%;
    .thead {
            width: 100%;
            height: 45px;
            border-bottom: 1px solid #d4d4d4;
            text-align: center;
            span {
                
                font-weight: bold;
                font-size: 23px;
            }
        }
    .c-pass {
        
        margin: 20px auto;
        width: 40%;
        text-align: center;
        border: 1px solid #D8D8D8;
        height: 300px;
        border-radius: 4px;
        table {
            width: 100%;
            tr{
                margin-top:5%;
            }
            th {
                padding-top: 5%;
                width: 40%;
                text-align: right;
            }
            td {
                height: 40px;
                width: 60%;
                input {
                    margin-top: 8%;
                    border-radius: 5px;
                    line-height: 28px;
                    border: 1px solid #d8d8d8;
                    color: #666;
                    box-shadow: 0 0 5px #fff;
                    height: 25px;
                    width: 70%;
                    padding-left: 5px;
                    &:focus {
                        transition-duration: 0.5s;
                        border: 1px solid #ffa200;
                        box-shadow: 0 0 5px #ffa200;
                        outline: 0;
                    }
                }
            }
        }
        #submit {
            margin-top: 5%;
            outline: 0;
            color: #fff;
            background-color: #ffa800;
            border-radius: 3px;
            height: 40px;
            border: none;
            width: 120px;
            &:hover {
                background-color: #ff7200;
            }
        }
    }
}