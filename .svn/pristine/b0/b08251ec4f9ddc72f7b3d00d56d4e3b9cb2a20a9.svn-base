body{
    // background-color: #D4D4D4;
    // text-align: center;
    
    .header{
        margin-left:15%;
        // margin-right: 20%;
        background-color: white;
        width: 70%;
        height: 50px;
        padding: 3px;

        .title{
            display: block;
            float: left;
            font-size: 20px;
            font-weight: bolder;
            letter-spacing: 2px;
            margin-top: 10px;
            margin-left: 30px;
        }
        .nav{
            margin-left: 20%;
            width: auto;
            ul{
                list-style-type: none;
                li{
                    float: left;
                    a{
                        width: 80px;
                        height: 30px;
                        font-size: 18px;
                        line-height: 30px;
                        display: block;
                        text-align: center;
                        text-decoration: none;
                        margin-left: 8px;
                        border-bottom: 2px #EEB422 solid;
                        &:hover{
                            background-color: #EEB422;
                            transition-duration: 0.3s;
                            color: white;
                            font-weight: bold;
                            border-radius: 4px;
                        }
                    }
                    
                }
            }
            
        }
        .to-login{
            width: 200px;
            float: left;
            height: 50px;
            margin-left: 10%;
            .btn{         
                width: 100px;
                background-color: #66CD00;
                color: whitesmoke;
                font-size: 18px;
                border-radius: 5px;
                height: 30px;
                &:hover{
                    background-color:#90EE90; 
                }
            }
            .register{
                position: relative;
                bottom: 30px;
                left: 130px;
            }
        }
    }
    .swiper-container{
        width: 100%;
        height: 600px;
        img{
            width: 100%;
            height: 100%;
        }
        .img-info{
            position: relative;
            top: 40px;
            left: 10px;
            color: white;
            font-size: 18px;
            font-weight: bolder;
        }
        .swiper-btn{
            color: white;
        }
        
    }
    .search{
        text-align: center;
        position: absolute;
        margin-left: 28%; 
        top: 48%;
        z-index: 999;
        width: 40%;
        height: 90px;
        padding-top: 60px;
        background-color: rgba($color: #000000, $alpha: 0.5);
        .in-find{
            padding-left: 30px;
            width: 70%;
            height: 40px;
            border-radius: 7px;
        }
        .find{
            background-color: #EEB422;
            color: white;
            font-size: 18px;
            font-weight: bold;
            height: 40px;
            width: 80px;
            border-radius: 7px;
            &:hover{
                background-color: lightcyan;
                // color: black;
                font-weight: bold;
                transition-duration: 0.3s;
            }
        }
        .icon-search{
            position: relative;
            // bottom: 20px;
            left: 36px;
            top: 6px;
        }
    }
    .notes{
        margin-left: 15%;
        margin-top: 2%;
        padding: 10px;
        width: 70%;
        min-height:1200px;
        height: auto;
        .topic{
            font-size: 20px;
            font-weight: bold;
            color: #EEB422;
            display: block;
            width:160px;
            text-align: center;
            border-bottom:2px #EEB422 solid;
        }
        .travel-note{
            margin-top: 8px;
            
            .note-item{
                border-bottom: 2px #EEB422 solid;
                height: 220px;
                padding: 8px; 
                width: 100%;   
                &:hover{
                    background-color:#F5F5F5;
                }          
                a{
                    text-decoration: none;
                }
                img{
                    width: 25%;
                    height: 180px;
                    margin-top: 2%;
                }
                .content{
                    float: right;
                    width: 70%;
                    height: 180px;
                    margin-top: 2%;
                    margin-right: 3%;
                    dt a{
                        font-size: 18px;
                        position: relative;
                        bottom: 8px;
                        left: 8px;
                        font-weight: bold;
                    }
                    dd a{
                        display: block;
                        margin-right: 10px;
                        word-wrap:break-word;
                        font-size: 14px;
                    }
                    .info{
                        width: 100%;
                        height: auto;
                        padding-left: 18px;
                        margin-top: 8%;
                        span{
                            position: relative;
                            top:16px;
                            display: block;
                            float: left;
                            margin-right: 30px;
                            .icon{
                                width: 20px;
                                height: 20px;
                            }
                        }
                        
                    }
                }
            }
        }
    }
}