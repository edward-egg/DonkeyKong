body{
    
    .header{
        background-color: #fff;
        width: 100%;
        height: 50px;
        padding:0;
        height:80px;
        .title{
            display: block;
            float: left;
            font-size: 20px;
            font-weight: bolder;
            letter-spacing: 2px;
            margin-left:6%;
            span{
                position: relative;
                bottom: 25px;
            }
        }
        .nav{
            padding-top: 1%;
            display: block;
            margin-left: 20%;
            width: auto;
            height: inherit;
            ul{
                list-style-type: none;
                li{
                    float: left;
                    a{
                        color: black;
                        width: 80px;
                        height: 30px;
                        font-size: 18px;
                        line-height: 30px;
                        display: block;
                        text-align: center;
                        text-decoration: none;
                        margin-left: 8px;
                        border-bottom: 2px #EEB422 solid;
                        &:link{
                            color: black;
                        }
                        &:hover{
                            background-color: #EEB422;
                            transition-duration: 0.3s;
                            color: white;
                            font-weight: bold;
                            border-radius: 4px;
                        }
                        
                    }
                    
                }
            }
            .to-login{
                width: 200px;
                float: left;
                height: 50px;
                margin-left: 10%;
                .btn{ 
                    outline: 0;
                    border: none;        
                    width: 100px;
                    background-color: #66CD00;
                    color: whitesmoke;
                    font-size: 18px;
                    border-radius: 5px;
                    height: 30px;
                    &:hover{
                        background-color:#90EE90; 
                    }
                }
                .register{
                    position: relative;
                    bottom: 30px;
                    left: 130px;
                }
            }
        }
        
    }
    .swiper-container{
        width: 100%;
        height: 600px;
        img{
            width: 100%;
            height: 100%;
        }
        .img-info{
            position: relative;
            top: 40px;
            left: 10px;
            color: white;
            font-size: 18px;
            font-weight: bolder;
        }
        .swiper-btn{
            color: white;
        }
        
    }
    .search{
        color: white;
        text-align: center;
        position: absolute;
        margin-left: 28%; 
        top: 48%;
        z-index: 999;
        width: 40%;
        height: 90px;
        padding-top: 60px;
        background-color: rgba($color: #000000, $alpha: 0.5);
        .radio-bar{
            input{
                width: 20px;
                height: 20px;
            }
            label{
                font-size: 16px;
            }
        }
        .in-find{
            padding-left: 30px;
            width: 70%;
            height: 40px;
            border-radius: 7px;
            outline: 0;
            border: 1px solid #d8d8d8;
            box-shadow: 0 0 5px #fff;
            &:focus{
                transition-duration: 0.5s;
                border: 1px solid #ffa200;
                box-shadow: 0 0 5px #ffa200;
                outline: 0;
            }
        }
        .find{
            border: none;
            outline: 0;
            background-color: #EEB422;
            color: white;
            font-size: 18px;
            font-weight: bold;
            height: 40px;
            width: 80px;
            border-radius: 7px;
            &:hover{
                background-color: #ffb01e;
                cursor: pointer;
                font-weight: bold;
                transition-duration: 0.3s;
            }
        }
        .icon-search{
            position: relative;
            left: 36px;
            top: 6px;
        }
    }
    .notes{
        margin-left: 15%;
        margin-top: 2%;
        padding: 10px;
        width: 70%;
        min-height:1200px;
        height: auto;
        .topic{
            font-size: 20px;
            font-weight: bold;
            color: #EEB422;
            display: block;
            width:160px;
            text-align: center;
            border-bottom:2px #EEB422 solid;
        }
        .travel-note{
            margin-top: 8px;           
            .note-item{
                border-bottom: 2px #EEB422 solid;
                height: 220px;
                padding: 8px; 
                width: 100%;   
                &:hover{
                    background-color:#F5F5F5;
                }          
                a{
                    text-decoration: none;
                }
                img{
                    width: 25%;
                    height: 180px;
                    margin-top: 2%;
                }
                .content{
                    float: right;
                    width: 70%;
                    height: 180px;
                    margin-top: 2%;
                    margin-right: 3%;
                    
                    dt a{
                        color: black;
                        font-size: 18px;
                        position: relative;
                        bottom: 8px;
                        left: 8px;
                        font-weight: bold;
                    }
                    dd a{
                        color: black;
                        display: block;
                        margin-right: 10px;
                        word-wrap:break-word;
                        font-size: 14px;
                    }
                    .info{
                        width: 100%;
                        height: auto;
                        padding-left: 18px;
                        margin-top: 8%;
                        span{
                            position: relative;
                            top:16px;
                            display: block;
                            float: left;
                            margin-right: 30px;
                            .icon{
                                width: 20px;
                                height: 20px;
                            }
                        }
                        
                    }
                }
            }
        }
    }
}