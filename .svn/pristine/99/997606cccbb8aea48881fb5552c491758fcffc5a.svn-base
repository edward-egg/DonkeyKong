.content {
    #tabs {
        .thead {
            text-align: center;
            padding-top: 5px;
            span {
                display: block;
                height: 40px;
                font-size: 18px;
                font-weight: bold;
            }
        }
        .detail {
            #tab1 {
                .list {
                    width: 100%;
                    .item {
                        margin-top: 5px;
                        padding: 10px;
                        width: 100%;
                        height: 80px;
                        border: 1px solid #d8d8d8;
                        color: #666;
                        box-shadow: 0 0 5px #fff;
                        border-radius: 5px;
                        .item-img {
                            float: left;
                            width: 15%;
                            img {
                                width: 80px;
                                height: 80px;
                            }
                        }
                        .item-content {
                            float: left;
                            width: 10%;
                            display: block;
                            margin-left: 20%;
                            position: relative;
//                          bottom: 60px;
                            top: 20px;
                            font-size: 23px;
                            font-weight: bold;
                        }
                        .confirm {                          
                            margin-left: 20%;
                            float: left;
                            width: 20%;
                            font-size: 18px;
                            span {
                                float: left;
                                display: block;
                                margin-left: 40px;
                            }
                        }
                        .operate {
                            float: right;
                            display: block;
                            width:20%;
                            margin-right: 13%;
                            margin-top: 20px;
                            .edit {
                                border-radius: 6px;
                                outline: 0;
                                height: 30px;
                                width: 100px;
                                background-color: #fff;
                                border:1px solid c6e2ff;
                                &:hover {
                                    background-color: #ecf5ff;
                                    border-color: #c6e2ff;
                                    color: #409EFF;
                                    transition-duration: 0.2s;
                                }
                            }
                            .delete {
                                border-radius: 6px;
                                outline: 0;
                                height: 30px;
                                width: 100px;
                                background-color: #f56c6c;
                                color: #fff;
                                border: none;
                                &:hover {
                                    background-color: #f78989;
                                    border-color: #f78989;
                                    transition-duration: 0.2s;
                                }
                            }
                        }
                        &:hover {
                            background-color: #F5F5F5;
                        }
                    }
                }
            }
            #tab2 {
                .note-title {
                    width: 100%;
                    input {
                        outline: 0;
                        width: 80%;
                        border: 1px solid #efeeee;
                        line-height: 38px;
                        font-size: 16px;
                        color: #666;
                        height: 38px;
                        padding: 0 80px 0 5px;
                        border-radius: 4px;
                        &:focus {
                            border-color: #007fff;
                            transition-duration: 0.3s;
                        }
                    }
                }
                .note-content {
                    width: 100%;
                    margin-top: 5px;
                    textarea {
                        outline: 0;
                        width: 80%;
                        min-height: 400px;
                        border: 1px solid #efeeee;
                        line-height: 38px;
                        font-size: 16px;
                        color: #666;
                        height: 38px;
                        padding: 0 80px 0 5px;
                        border-radius: 4px;
                        &:focus {
                            border-color: #007fff;
                            transition-duration: 0.3s;
                        }
                    }
                }
                .note-submit {
                    margin-top: 5px;
                    button {
                        outline: 0;
                        color: #fff;
                        background-color: #ffa800;
                        border-radius: 3px;
                        text-align: center;
                        height: 30px;
                        border: none;
                        &:hover {
                            background-color: #ff7200;
                        }
                    }
                }
            }
        }
    }
}