body {
    width: 100%;
    height: 100%;
    margin: 0;
    padding: 0;
    .header {
        width: 100%;
        height: 150px;
        background-color: rgb(84, 92, 100);
        .title {
            position: absolute;
            top: 3%;
            left: 40%;
            color: white;
            font-size: 50px;
            font-weight: bold;
            span{
                position: relative;
                bottom: 30px;
            }
        }
        .header-content {
            padding: 1%;
            text-align: center;
            width: 20%;
            height: inherit;
            .avatar {
                width: 50px;
                height: 50px;
                border-radius: 50px;
                overflow: hidden;
                margin-left: 10%;
                img {
                    width: 100%;
                    height: 100%;
                }
            }
            .user-name {
                float: left;
                color: white;
                font-size: 16px;
                margin: 2% 0 0 2%;
            }
        }
        .logout {
            outline: 0;
            float: right;
            width: 8%;
            height: 40px;
            position: relative;
            top: 20%;
            right: 5%;
            border-radius: 5px;
            background-color: #909399;
            color: #fff;
            font-size: 18px;
            border: none;
            &:hover {
                outline: 0;
                background-color: #a6a9ad;
                transition-duration: 0.2s;
            }
        }
        .to-main {
            margin-left: 5px;
            outline: 0;
            float: right;
            width: 8%;
            height: 40px;
            position: relative;
            top: 20%;
            right: 5%;
            border-radius: 5px;
            background-color: #00BC9B;
            color: #fff;
            font-size: 18px;
            border: none;
            &:hover {
                outline: 0;
                background-color: #00B091;
                transition-duration: 0.2s;
            }
        }
    }
    .banner {
        background-color: rgb(84, 92, 100);
        float: left;
        width: 9%;
        height: 500px;
        ul {
            position: relative;
            right: 40px;
            list-style-type: none;
            width: 100%;
            padding-top: 5%;
            li {
                text-align: center;
                margin-top: 30%;
                border-bottom: 1px white solid;
                width: 100%;
                height: 50px;
                &:hover {
                    background-color: rgb(67, 74, 80);
                }
                .icon-menu {
                    width: 20px;
                    height: 20px;
                }
                a {
                    display: block;
                    padding-top: 8%; // margin-top: 30%;
                    font-size: 1em;
                    text-decoration: none;
                    color: white;
                    &:hover {
                        font-weight: bold;
                        color: rgb(255, 208, 75);
                    }
                }
            }
        }
    }
    .body {
        width: 90%;
        min-height: 800px;
        height: auto;
        float: left;
    }
}